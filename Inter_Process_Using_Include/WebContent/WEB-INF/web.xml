<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Application Name </display-name>
  <welcome-file-list>
    <welcome-file>Index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <display-name>ColorAppender</display-name>
    <servlet-name>ColorAppender</servlet-name>
    <servlet-class>Controller.ColorAppender</servlet-class>
  </servlet>
  <servlet>
    <display-name>Hello</display-name>
    <servlet-name>Hello</servlet-name>
    <servlet-class>Controller.Hello</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ColorAppender</servlet-name>
    <url-pattern>/colorappender</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/next</url-pattern>
  </servlet-mapping>
</web-app>